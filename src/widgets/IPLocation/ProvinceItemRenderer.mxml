<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				xmlns:viewer="com.esri.viewer.components.*"
				autoDrawBackground="false"
				dataChange="itemrenderer_dataChangeHandler(event)"
				minHeight="40">
	<fx:Declarations>
		<!--<mx:SetStyleAction id="rollOverColorStyle" name="color" value="0x1C00C7"/>-->
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			import mx.utils.StringUtil;
			
			private const PROVINCE_CLICK:String = "searchResultClick";
			private const PROVINCE_MOUSE_OVER:String = "searchResultMouseOver";
			private const PROVINCE_MOUSE_OUT:String = "searchResultMouseOut";
			
			private var result:Object = null;//{group:"A",province:hashtable}

			private function itemrenderer_dataChangeHandler(event:FlexEvent):void
			{
				result = data;
				if (result)
				{
				}
			}
			
			private function itemrenderer_clickHandler(event:MouseEvent):void
			{
				dispatchEvent(new Event(PROVINCE_CLICK, true)); // bubbles
			}
			
			private function itemrenderer_mouseOverHandler(event:MouseEvent):void
			{
				dispatchEvent(new Event(PROVINCE_MOUSE_OVER, true));
			}
			
			private function itemrenderer_mouseOutHandler(event:MouseEvent):void
			{
				dispatchEvent(new Event(PROVINCE_MOUSE_OUT, true)); // bubbles
			}
		]]>
	</fx:Script>
	
	<s:HGroup width="100%" height="40" gap="5">
		<s:VGroup height="100%" paddingTop="5">
			<s:Label id="gxLbl" text="广西:" fontSize="14" fontWeight="bold"/>
		</s:VGroup>
		<s:Group id="gxGroup" width="100%" height="40" right="3">
			<s:layout>
				<components:FlowLayout gapColumn="0" clipAndEnableScrolling="true"/>
			</s:layout>
		</s:Group>
	</s:HGroup>
</s:ItemRenderer>